<div class="grid">
  <div class="col-6">
    <h1>Welcome to ROCKET FUEL!</h1>
    <h2>Get your coffee here</h2>
    <a href="/login">Log in</a>
    <a href="/signup">Sign up</a>
  </div>
</div>

<div class="grid">
<% Product.all.each do |product| %>
  <div class="col-4">
    <a href="/products/<%=product.slug%>"><img src="public/img/<%=product.slug%>-square" alt="<%=product.name%>"></a>
    <a href="/products/<%=product.slug%>"><header><%=product.name%></header></a>
    <p>$<%=product.price%></p>
    <a href="/products/<%=product.slug%>">Find out more</a>
  </div>
<%end%>
</div>
