<h1>Create a new product</h1>

<form action="/admin/<%=@admin.id%>/products" method="post">
  <input type="text" name="name" placeholder="Name" required>
  <input type="text" name="price" placeholder="Price" required><br><br>
  <textarea cols="50" rows="10" name="description" placeholder="description" required></textarea><br><br>
  <input type="submit">
</form>
