<h1>Create a new product</h1>

<form action="/admin/<%=@admin.id%>/product" method="post">
  <input type="text" name="name" placeholder="Name" required>
  <input type="text" name="price" placeholder="Price" required>
  <input type="textarea" col="10" row="10" name="description" placeholder="description" required>
  <input type="submit">
</form>